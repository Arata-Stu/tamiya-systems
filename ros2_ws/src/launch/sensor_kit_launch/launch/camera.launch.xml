<launch>
    <arg name="use_camera" default="true" description="use camera"/>
    <arg name="camera_model" default="elp" />
    <arg name="camera_container_name" default="camera_container" />

    <arg name="image_width" default="640" />
    <arg name="image_height" default="240" />
    
    <node pkg="rclcpp_components" exec="component_container" name="$(var camera_container_name)" output="screen"/>

    <group if="$(var use_camera)">
        <include file="$(find-pkg-share sensor_kit_launch)/launch/camera_$(var camera_model).launch.xml">
            <arg name="camera_container_name" value="$(var camera_container_name)"/>
        </include>
    </group>
</launch>