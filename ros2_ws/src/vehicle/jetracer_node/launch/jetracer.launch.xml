<launch>   
    <arg name="vehicle_control_topic" default="/jetracer/control_cmd"/>
    <arg name="jetracer_param"  default="$(find-pkg-share jetracer_node)/config/jetracer_node.param.yaml"/>

    <node pkg="jetracer_node" 
          exec="jetracer_node.py" 
          name="jetracer_node" 
          output="screen">

        <param from="$(var jetracer_param)"/>
        <remap from="/control_cmd" to="$(var vehicle_control_topic)"/>
    </node>
    
</launch>
